<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="ucsp_looping" format="boolean" />
    <attr name="ucsp_enableAudioFocus" format="boolean" />
    <attr name="ucsp_screenScaleType" format="dimension">
        <enum name="type_default" value="0" />
        <enum name="type_4_3" value="1" />
        <enum name="type_16_9" value="2" />
        <enum name="type_18_9" value="3" />
        <enum name="type_original" value="4" />
        <enum name="type_center_crop" value="10" />
        <enum name="type_match_parent" value="20" />
    </attr>
    <attr name="ucsp_playerBackgroundColor" format="color" />

    <declare-styleable name="DKVideoView">
        <attr name="ucsp_looping" />
        <attr name="ucsp_enableAudioFocus" />
        <attr name="ucsp_screenScaleType" />
        <attr name="ucsp_playerBackgroundColor" />
    </declare-styleable>

    <declare-styleable name="UCSVideoView">
        <attr name="ucsp_looping" />
        <attr name="ucsp_enableAudioFocus" />
        <attr name="ucsp_screenScaleType" />
        <attr name="ucsp_playerBackgroundColor" />
    </declare-styleable>

    <declare-styleable name="UCSDisplayContainer">
        <attr name="ucsp_looping" />
        <attr name="ucsp_enableAudioFocus" />
        <attr name="ucsp_screenScaleType" />
        <attr name="ucsp_playerBackgroundColor" />
    </declare-styleable>


    <item name="screen_mode_layout_params" type="id" />

</resources>