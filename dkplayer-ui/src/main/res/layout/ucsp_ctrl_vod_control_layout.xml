<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <unics.player.control.widget.FloatTextIndicatorSeekBar
            android:id="@+id/ucsp_ctrl_seekBar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="1000"
            android:textColor="@android:color/white"
            app:ucsp_endpointMode="offsetText"
            app:ucsp_floatTextMargin="18dp"
            android:shadowRadius="5"
            android:shadowDx="5"
            android:shadowColor="@android:color/holo_red_light"/>

        <unics.player.control.widget.FloatTextIndicatorSeekBar
            android:id="@+id/ucsp_ctrl_seekBar3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="1000"
            android:layout_marginTop="100dp"
            android:textColor="@android:color/white"
            app:ucsp_endpointMode="offsetSeekBar"
            app:ucsp_floatTextMargin="18dp"
            android:shadowRadius="5"
            android:shadowDy="5"
            android:shadowColor="@android:color/black"/>

        <unics.player.control.widget.FloatTextIndicatorSeekBar
            android:id="@+id/ucsp_ctrl_seekBar4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="1000"
            android:layout_marginTop="200dp"
            android:textColor="@android:color/white"
            app:ucsp_endpointMode="clipText"
            app:ucsp_floatTextMargin="18dp"
            android:shadowRadius="5"
            android:shadowColor="@android:color/holo_orange_dark"/>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ucsp_ctrl_vodCtrlContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dkplayer_controller_height"
        android:layout_gravity="bottom"
        android:background="@drawable/dkplayer_shape_stardard_controller_bottom_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ucsp_ctrl_play"
            android:layout_width="@dimen/dkplayer_controller_height"
            android:layout_height="@dimen/dkplayer_controller_height"
            android:padding="@dimen/dkplayer_controller_icon_padding"
            android:src="@drawable/dkplayer_selector_play_button" />

        <TextView
            android:id="@+id/ucsp_ctrl_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dkplayer_controller_time_text_size"
            tools:text="00:00" />

        <SeekBar
            android:id="@+id/ucsp_ctrl_seekBar"
            style="@style/UcspCtrl.SeekBar.Rounded"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:max="1000"
            tools:progress="0" />

        <TextView
            android:id="@+id/ucsp_ctrl_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dkplayer_controller_time_text_size"
            tools:text="00:00" />

        <ImageView
            android:id="@+id/ucsp_ctrl_fullScreen"
            android:layout_width="@dimen/dkplayer_controller_height"
            android:layout_height="@dimen/dkplayer_controller_height"
            android:padding="@dimen/dkplayer_controller_icon_padding"
            android:src="@drawable/dkplayer_selector_full_screen_button" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/ucsp_ctrl_progressOverlay"
        style="@style/UcspCtrl.ProgressBar.Overlay"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:max="1000"
        android:visibility="gone"
        tools:visibility="visible" />

</FrameLayout>