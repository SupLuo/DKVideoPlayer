<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ucsp_ctrl_vodCtrlContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/ucsp_ctrl_bottom_gradient_transparent_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ucsp_ctrl_play"
            style="@style/UcspCtrl.IconButton"
            android:src="@drawable/dkplayer_selector_play_button" />

        <unics.player.control.widget.TimeShiftFloatTextIndicatorSeekBar
            android:id="@+id/ucsp_ctrl_seekBar"
            style="@style/UcspCtrl.DefaultTimeShiftBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:max="1000"
            app:ucsp_endpointMode="clipText"
            app:ucsp_ensureTextDisplay="true"
            app:ucsp_floatTextMargin="12dp"
            app:ucsp_includeTextBounds="false"
            tools:progress="0" />

        <TextView
            android:id="@+id/ucsp_ctrl_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dkplayer_controller_time_text_size"
            tools:text="00:00" />

        <ImageView
            android:id="@+id/ucsp_ctrl_fullScreen"
            style="@style/UcspCtrl.IconButton"
            android:src="@drawable/dkplayer_selector_full_screen_button" />
    </LinearLayout>

    <unics.player.control.widget.TimeShiftProgressBar
        android:id="@+id/ucsp_ctrl_progressOverlay"
        style="@style/UcspCtrl.ProgressBar.Overlay"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:visibility="gone"
        tools:visibility="visible" />

</FrameLayout>