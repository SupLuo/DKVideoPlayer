<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="unics.player.control.BaseControlComponent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <unics.player.control.widget.TimeShiftFloatTextIndicatorSeekBar
            android:id="@+id/ucsp_ctrl_seekBar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="1000"
            android:shadowColor="@android:color/holo_red_light"
            android:shadowDx="5"
            android:shadowRadius="5"
            android:textColor="@android:color/white"
            app:ucsp_endpointMode="offsetText"
            app:ucsp_floatTextMargin="18dp" />

        <unics.player.control.widget.TimeShiftFloatTextIndicatorSeekBar
            android:id="@+id/ucsp_ctrl_seekBar3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:max="1000"
            android:shadowColor="@android:color/black"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:textColor="@android:color/white"
            app:ucsp_endpointMode="offsetSeekBar"
            app:ucsp_floatTextMargin="8dp"/>

        <unics.player.control.widget.TimeShiftFloatTextIndicatorSeekBar
            android:id="@+id/ucsp_ctrl_seekBar4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:max="1000"
            android:shadowColor="@android:color/holo_orange_dark"
            android:shadowRadius="5"
            android:textColor="@android:color/white"
            app:ucsp_endpointMode="clipText"
            app:ucsp_includeTextBounds="false"
            app:ucsp_floatTextMargin="8dp" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ucsp_ctrl_vodCtrlContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ucsp_ctrl_vod_bar_height"
        android:layout_gravity="bottom"
        android:background="@drawable/ucsp_ctrl_panel_bottom_gradient_transparent_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ucsp_ctrl_play"
            style="@style/UcspCtrl.CtrlVodBarImageButton.PlayPause" />

        <TextView
            android:id="@+id/ucsp_ctrl_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/UcspCtrl.CtrlTimeText"
            tools:text="00:00" />

        <unics.player.control.widget.TimeShiftSeekBarImpl
            android:id="@+id/ucsp_ctrl_seekBar"
            style="@style/UcspCtrl.SeekBar.Rounded"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:max="1000"
            tools:progress="0" />

        <TextView
            android:id="@+id/ucsp_ctrl_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/UcspCtrl.CtrlTimeText"
            tools:text="00:00" />

        <ImageView
            android:id="@+id/ucsp_ctrl_fullScreen"
            style="@style/UcspCtrl.CtrlVodBarImageButton.Fullscreen" />
    </LinearLayout>

    <unics.player.control.widget.TimeShiftProgressBar
        android:id="@+id/ucsp_ctrl_progressOverlay"
        style="@style/UcspCtrl.ProgressBar.Overlay"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:visibility="gone"
        tools:visibility="visible" />

</merge>