<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="ucsp_ctrl_theme" format="reference" />
    <color name="ucsp_ctrl_accent_color">#FF5FFFD8</color>
    <color name="ucsp_ctrl_accent_color_dark">#39C5BB</color>
    <color name="ucsp_ctrl_primary_text_color">#f1f1f1</color>
    <dimen name="ucsp_ctrl_timeShift_float_text_size">14sp</dimen>
    <color name="ucsp_ctrl_timeShift_float_text_color_shadow">@android:color/black</color>

    <!--图标大小-->
    <dimen name="ucsp_ctrl_icon_size">48dp</dimen>
    <!--图标四周间距-->
    <dimen name="ucsp_ctrl_icon_padding">12dp</dimen>

    <!--底部渐变起始色-->
    <color name="ucsp_ctrl_bottom_gradient_start_color">#4D000000</color>

    <!--seek thum 大小-->
    <dimen name="ucsp_ctrl_seekbar_thumb_size">24dp</dimen>
    <!--控制器seekbar背景高度-->
    <dimen name="ucsp_ctrl_seekbar_height">3dp</dimen>
    <!--默认背景色：20%白色-->
    <color name="ucsp_ctrl_seekbar_background_color">#33FFFFFF</color>
    <!--默认二级进度颜色：70%白色-->
    <color name="ucsp_ctrl_seekbar_secondary_progress_color">#B2FFFFFF</color>
    <!--进度值颜色-->
    <color name="ucsp_ctrl_seekbar_progress_color">@color/ucsp_ctrl_accent_color</color>

    <style name="UcspCtrl" />

    <style name="UcspCtrl.IconButton">
        <item name="android:layout_width">@dimen/ucsp_ctrl_icon_size</item>
        <item name="android:layout_height">@dimen/ucsp_ctrl_icon_size</item>
        <item name="android:padding">@dimen/ucsp_ctrl_icon_padding</item>
    </style>

    <!--圆角进度条-->
    <style name="UcspCtrl.SeekBar">
        <!--让thumb显示完全：在两端不会被裁剪-->
        <item name="android:thumbOffset">0dp</item>
        <!--设置左右间隙为0，避免左右留出空白区域-->
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:thumb">@drawable/ucsp_ctrl_seekbar_thumb</item>
        <!--限定进度条高度：与控件高度有区别-->
        <item name="android:minHeight">@dimen/ucsp_ctrl_seekbar_height</item>
        <item name="android:maxHeight">@dimen/ucsp_ctrl_seekbar_height</item>
        <!--背景-->
        <item name="android:progressDrawable">@drawable/ucsp_ctrl_seekbar_progress</item>
    </style>

    <!--圆角进度条-->
    <style name="UcspCtrl.SeekBar.Rounded">
        <!--不知道为啥要显示写下面的属性预览才有效果-->
        <item name="android:thumb">@drawable/ucsp_ctrl_seekbar_thumb</item>
        <!--限定进度条高度：与控件高度有区别???不知道为啥也需要重新写定义这个属性，不然在xml预览的时候，进度条高度变得特别高-->
        <item name="android:minHeight">@dimen/ucsp_ctrl_seekbar_height</item>
        <item name="android:maxHeight">@dimen/ucsp_ctrl_seekbar_height</item>
        <item name="android:progressDrawable">@drawable/ucsp_ctrl_seekbar_progress_rounded</item>
    </style>


    <style name="UcspCtrl.ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/ucsp_ctrl_seekbar_progress</item>
    </style>

    <style name="UcspCtrl.ProgressBar.Overlay">
        <item name="android:alpha">0.5</item>
        <item name="android:progressDrawable">@drawable/ucsp_ctrl_seekbar_progress</item>
    </style>

    <style name="UcspCtrl.DefaultSeekBarTheme">
        <item name="android:seekBarStyle">@style/UcspCtrl.SeekBar.Rounded</item>
        <item name="seekBarStyle">@style/UcspCtrl.SeekBar.Rounded</item>
    </style>


    <style name="UcspCtrl.DefaultTimeShiftBar">
        <item name="ucsp_seekBarStyle">@style/UcspCtrl.DefaultSeekBarTheme</item>
        <item name="android:textColor">@color/ucsp_ctrl_primary_text_color</item>
        <item name="android:textSize">@dimen/ucsp_ctrl_timeShift_float_text_size</item>
        <item name="android:shadowColor">@color/ucsp_ctrl_timeShift_float_text_color_shadow</item>
        <item name="android:shadowRadius">4</item>
        <item name="ucsp_floatTextMargin">12dp</item>
    </style>

</resources>